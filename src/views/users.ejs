<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="main-content container-fluid">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Configurações</h3>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class='breadcrumb-header'>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Contrato Automax</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Usuários</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <section class="section">

                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <div class="row">
                                <div class="col-md-6">
                                    Gerenciamento de Usuários
                                </div>

                                <div class="col-md-6 text-end">
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">Incluir</button>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal3">Alterar Senha</button>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal2">Remover</button>
                                </div>
                            </div>
                        </div>
                        <table class="table table-responsive-sm text-sm">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">CPF</th>
                                    <th scope="col">Status</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr> 
                                    <td> Teste</td>
                                    <td>Teste</td>
                                    <td>31 99999-0000</td>
                                    <td>teste@gmail.com</td>
                                    <td>ativo</td>
                                  </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </section>
        </div>

        <!--INCLUIR USER-->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Incluir Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-md-12 col-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="first-name-column">Nome</label>
                                                <input type="text" id="txbNome" class="form-control" placeholder="NOME"
                                                    name="fname-column">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="last-name-column">Email</label>
                                                <input type="email" id="txbEmail" class="form-control"
                                                    placeholder="Email" name="lname-column">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="city-column">CPF</label>
                                                <input type="text" name="txbCPF" id="txbCPF" class="form-control"
                                                    placeholder="CPF" maxlength="15" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="city-column">Senha</label>
                                                <input type="password" name="txbPass" id="txbPass" class="form-control"
                                                    placeholder="SENHA" maxlength="15" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="city-column">Loja</label>
                                                <select id="slctLoja" class="form-control">
                                                    <option>AUTOMAX RAJA</option>
                                                    <option>AUTOMAX VIA</option>
                                                    <option>MAX VEICULOS</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="country-floating">Perfil</label>
                                                <select id="slctPerfil" class="form-control">
                                                    <option>USER</option>
                                                    <option>ADM</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button ID="btnIncluir" Text="Salvar" CssClass="btn btn-primary"
                            OnClick="btnIncluir_Click"></button>
                    </div>
                </div>
            </div>
        </div>

        <!--DESATIVAR USER-->
        <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel2"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel2">Remover Modelo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-md-12 col-12">
                                <div class="form-group">
                                    <label for="first-name-column">USUARIO</label>
                                    <dropDownList CssClass="form-control" ID="ddlExec"></dropDownList>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button ID="Button1" Text="Remover" CssClass="btn btn-primary"
                            OnClick="btnDelete_Click"></button>
                    </div>
                </div>
            </div>
        </div>

        <!--ALTERAR SENHA-->
        <div class="modal fade" id="exampleModal3" tabindex="-1" aria-labelledby="exampleModalLabel2"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel3">Alterar Senha</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-md-12 col-12">
                                <div class="form-group">
                                    <label for="first-name-column">USUARIO</label>
                                    <dropDownList CssClass="form-control" ID="ddlSenha"></dropDownList>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 col-12">
                                <div class="form-group">
                                    <label for="first-name-column">NOVA SENHA</label>
                                    <textBox ID="txbNovaSenha" CssClass="form-control" Text="" placeholder="NovaSenha"
                                        TextMode="Password" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button id="btnAlterar" Text="Alterar" CssClass="btn btn-primary"
                            OnClick="btnAlterar_Click"></button>
                    </div>
                </div>
            </div>
        </div>

        </form>


        <%- include('includes/footer') %>