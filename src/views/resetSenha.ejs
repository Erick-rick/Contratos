
<%- include('includes/head') %>
    <title>Forgot Password </title>
    <link rel="stylesheet" href="../assets/css/bootstrap.css">

    <link rel="shortcut icon" href="../assets/images/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="../assets/css/app.css">

    <div id="auth">

        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-12 mx-auto">
                    <div class="card py-4">
                        <div class="card-body">
                            <div class="text-center mb-5">
                                <img src="../Images/AutomaxLogo.png" class="w-100 mb-4" height="48" >
                                <h3>Esqueceu sua senha ?</h3>
                                <p>Informe seu CPF e Email para obter ajuda.</p>
                            </div>
                            <Form id="form1" runat="server">
                                <div class="form-group">
                                    <label for="first-name-column">CPF</label>
                                    <input type="text" id="txbCPF" class="form-control" runat="server" name="fname-column" required>
                                </div>
                                <div class="form-group">
                                    <label for="first-name-column">Email</label>
                                    <input type="email" id="txbEmail" class="form-control" runat="server" name="fname-column" required>
                                </div>
                                <div id="divError" runat="server" visible="false" CssClass="alert alert-danger">
                                    <label runat="server" ID="lbError" Text="Error"></label>
                                </div>
                                <div class="row">
                                    <div class="col-md-6"><a href="Login.aspx">Voltar</a></div>
                                    <div class="col-md-6 text-end">
                                        <button runat="server" ID="btnSend" OnClick="btnEnviar_ServerClick" class="btn btn-primary float-end" Text="Enviar"/>
                                    </div>
                                </div>
                                <div class="clearfix">
                                </div>
                            </Form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="../assets/js/feather-icons/feather.min.js"></script>
    <script src="../assets/js/app.js"></script>

    <script src="../assets/js/main.js"></script>


<%- include('includes/footer') %>
