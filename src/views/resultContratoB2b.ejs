    <script>
        var tipoDocumentoEnum = {
            CARTEIRA_MOTORISTA: 'Carteira de Motorista',
            PASSAPORTE: 'Passaporte',
            IDENTIDADE: 'Identidade'
        };

        moment.locale("pt-br");

        require(["dojo/ready", "dijit/form/CurrencyTextBox", "dijit/form/DateTextBox", "dbootstrap"],
            function (ready) {
                ready(function () {
                    paginaNovoPedidoContrato.buscarPropostaAndPreencherContrato('4460937');
                });
            }
        );

        app.format = (function (source, params) {
            var s = source;
            if (params && params.length > 0) {
                for (var i = 0; i < params.length; i++) {
                    s = s.replace(new RegExp("\\{" + i + "\\}", "g"), function () {
                        return params[i];
                    });
                }
            }
            return s;
        });

        var paginaNovoPedidoContrato = (new function () {

            var _propostaCompraId = null;

            this.buscarPropostaAndPreencherContrato = (function (id) {
                _propostaCompraId = id;

                app.doGet("/novoPedido/showContrato/" + _propostaCompraId, null, function (data) {
                    if (data != null) {
                        var valorTotalCestoCompras = 0;

                        $("#contrato_contratoImpressao_tabela_simulacoes > tbody").html("");
                        $("#contrato_contratoImpressao_tabela_simulacoes > tfoot").html("");

                        var linha = '<tr><td><b>{0}</b></td><td>{1} {2}<ul><li>Cor: {3}</li><li>Opcionais: {4}</li></ul></td><td>R$ {5}</td><td>{6}</td><td>R$ {7}</td></tr>';

                        var simulacoes = data.cestoCompras.simulacoes;
                        var count = 0;
                        for (var i in simulacoes) {
                            var simulacao = simulacoes[i];

                            if (data.status != "PENDENTE" && simulacao.codigoFaturamento == null)
                                continue;

                            count++;

                            var opcionais = "";
                            for (var iOpc in simulacao.opcionais)
                                opcionais += simulacao.opcionais[iOpc].codigo + " ";

                            valorTotalCestoCompras += simulacao.valorTotalVezesQuantidade;

                            var item = app.format(linha, [
                                count,
                                simulacao.codigoFaturamento != null ? "(" + simulacao.codigoFaturamento + ")" : "",
                                simulacao.descricao,
                                simulacao.cor,
                                opcionais,
                                app.formatCurrency(simulacao.valorCompra),
                                simulacao.quantidade,
                                app.formatCurrency(simulacao.valorTotalVezesQuantidade)
                            ]);

                            $("#contrato_contratoImpressao_tabela_simulacoes > tbody:last").append(item);
                        }

                        var showPreposto = data.dadosVenda.cliente.cgc.length > 11;

                        if (data.dadosVenda.isPessoaPoliticamenteExposta !== null)
                            data.dadosVenda.isPessoaPoliticamenteExposta = data.dadosVenda.isPessoaPoliticamenteExposta === true ? "Sim" : "Não";
                        else
                            data.dadosVenda.isPessoaPoliticamenteExposta = "-";

                        if (data.dadosVenda.cliente.isPessoaPoliticamenteExposta !== null)
                            data.dadosVenda.cliente.isPessoaPoliticamenteExposta = data.dadosVenda.cliente.isPessoaPoliticamenteExposta === true ? "Sim" : "Não";
                        else
                            data.dadosVenda.cliente.isPessoaPoliticamenteExposta = "-";

                        if (data.dadosVenda.cliente.tipoDocumento !== null) {
                            data.dadosVenda.cliente.tipoDocumento = tipoDocumentoEnum[data.dadosVenda.cliente.tipoDocumento] || data.dadosVenda.cliente.tipoDocumento;
                        }

                        if (data.dadosVenda.prepostoTipoDocumento !== null) {
                            data.dadosVenda.prepostoTipoDocumento = tipoDocumentoEnum[data.dadosVenda.prepostoTipoDocumento] || data.dadosVenda.prepostoTipoDocumento;
                        }

                        var rodape = app.format('<tr><td colspan="4"><strong>Total da compra</strong></td><td><strong>R$ {0}</strong></td></tr>', [
                            app.formatCurrency(valorTotalCestoCompras)
                        ]);

                        $("#contrato_contratoImpressao_tabela_simulacoes > tfoot:last").append(rodape);

                        app.objectToElement(data, "contrato_contratoImpressao_span_", "span");

                        dojo.byId("contrato_contratoImpressao_span_lastUpdated").innerHTML = app.formatarDataNormal(data.lastUpdated);
                        dojo.byId("contrato_contratoImpressao_span_dadosVenda__cliente__dataConstituicao").innerHTML = app.formatarDataNormal(data.dadosVenda.cliente.dataConstituicao);

                        if (data.dadosVenda.isentoICMSVersao != null) {
                            dojo.byId("contrato_contratoImpressao_span_dadosVenda_isentoICMSVersao").innerHTML = app.formatarTrueFalse(data.dadosVenda.isentoICMSVersao);
                            dojo.byId("contrato_contratoImpressao_span_dadosVenda_isentoICMSOpcional").innerHTML = app.formatarTrueFalse(data.dadosVenda.isentoICMSOpcional);
                            dojo.byId("contrato_contratoImpressao_span_dadosVenda_isentoIPIVersao").innerHTML = app.formatarTrueFalse(data.dadosVenda.isentoIPIVersao);
                            dojo.byId("contrato_contratoImpressao_span_dadosVenda_isentoIPIOpcional").innerHTML = app.formatarTrueFalse(data.dadosVenda.isentoIPIOpcional);
                            $("#contrato_contratoImpressao_conteudo_isencao").show();
                        }

                        if (data.dadosVenda.criacaoCertidaoCNDIR != null)
                            $("#contrato_contratoImpressao_conteudo_certidao_negativa").show();

                        if (data.dadosVenda.clienteFaturamento != null)
                            $("#contrato_contratoImpressao_conteudo_cliente_faturamento").show();

                        if (!showPreposto) {
                            app.hide("cliente_preposto_col_1");
                            app.hide("cliente_preposto_col_2");
                        } else {
                            app.hide("cliente_pessoa_fisica_col_1");
                            app.hide("cliente_pessoa_fisica_col_2");
                        }

                    } else {
                        app.showError("Proposta de compra [" + this.getPropostaCompraId() + "] não foi encontrada.");
                        app.showErrorMessage("Proposta de compra [" + this.getPropostaCompraId() + "] não foi encontrada.");
                    }
                });
            });

            this.fechar = (function () {
                var _id = null;
                window.close();
            });

            return this;

        });
